---
const { text, dataValue, className, style } = Astro.props;
const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
let interval = null;

function animateText(target) {
  let iteration = 0;

  clearInterval(interval);

  interval = setInterval(() => {
    target.innerText = target.innerText
      .split("")
      .map((letter, index) => {
        if (index < iteration) {
          return target.dataset.value[index];
        }

        return letters[Math.floor(Math.random() * 26)];
      })
      .join("");

    if (iteration >= target.dataset.value.length) {
      clearInterval(interval);
    }

    iteration += 1 / 3;
  }, 30);
}

function initAnimation() {
  const h1 = document.querySelector(`h1[data-value='${dataValue}']`);
  if (h1) {
    animateText(h1);

    document.addEventListener("scroll", () => {
      const rect = h1.getBoundingClientRect();
      if (rect.top < window.innerHeight && rect.bottom >= 0) {
        animateText(h1);
      }
    });
  }
}

export { initAnimation };
---

<h1 class={className} style={style} data-value={dataValue}>{text}</h1>

<script>
  import { initAnimation } from "./AnimatedText.astro";
  document.addEventListener("DOMContentLoaded", initAnimation);
</script>
